#!/bin/sh

# Handle SIGTRAP signals sent by refresh script to update the status bar.
trap 'update' 5

status() { \
    printf "   "

    if  ip route get 1.2.3.4 > /dev/null; then 
        ip route  | awk 'NR==1{ print $5 " " $9 }'
    else
        printf "offline"
    fi    
 
    printf "| "
    if [ "$(pulsemixer --get-mute)" = "1" ]; then 
        printf "ðŸ”‡"
    else
        vol=$(pulsemixer --get-volume | awk '{print $1}')
        if [ "$vol" -gt "70" ]; then
            icon="ðŸ”Š"
        elif [ "$vol" -lt "30" ]; then
            icon="ðŸ”ˆ"
        else
            icon="ðŸ”‰"
        fi
        printf "%s %s%%\\n" "$icon" "$vol"
    fi

    printf " | "
    printf "âš¡"; printf "%s" "$(battery)"

    printf " | "
    setxkbmap -query | grep layout | awk  '{print $2}'

    printf " | "
    date +"%H:%M %A %d.%m.%Y"
}

update() { \
    xsetroot -name "$(status | tr '\n' ' ')" &
    wait
}

while :; do
    update
    sleep 5s &
    wait
done

